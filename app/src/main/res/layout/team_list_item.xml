<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/positionTextView"
        android:text="20"
        android:textSize="24sp"
        android:textColor="#A6000000"
        />
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/teamNameTextView"
        android:text="teamName"
        android:textSize="24sp"
        android:textColor="#A6000000"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/positionTextView"
        android:layout_toEndOf="@+id/positionTextView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goalDifferenceTextView"
        android:textSize="24sp"
        android:text="50"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/pointsTextView"
        android:layout_toStartOf="@+id/pointsTextView"
        android:layout_marginRight="12dp"
        android:textColor="#A6000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointsTextView"
        android:text="100"
        android:textSize="24sp"
        android:textColor="#A6000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>